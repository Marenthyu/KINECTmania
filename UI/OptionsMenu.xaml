<Page x:Class="KINECTmania.GUI.OptionsMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KINECTmania.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}" d:DesignWidth="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}"
      Title="Page2">

    <Grid Width="{DynamicResource {x:Static SystemParameters.MaximumWindowTrackWidthKey}}" Height="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}" MinWidth="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}" MinHeight="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}">
        <Label Content="Options" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="60"/>
        <Button x:Name="BackToMainMenu" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="125" Margin="10,921,0,0" Height="125" Click="BackToMainMenu_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="res/f_left.gif"/>
            </Button.Background>
            
        </Button>

    </Grid>
</Page>
