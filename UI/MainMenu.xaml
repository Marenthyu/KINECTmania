<Page x:Class="KINECTmania.GUI.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KINECTmania.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}" d:DesignWidth="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}"
      Title="Page1">

    <Grid MinWidth="{DynamicResource {x:Static SystemParameters.MinimizedWindowHeightKey}}" MinHeight="{DynamicResource {x:Static SystemParameters.MinimumWindowWidthKey}}" Width="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenWidthKey}}" Height="{DynamicResource {x:Static SystemParameters.MaximizedPrimaryScreenHeightKey}}">
        <Label Content="Main Menu" HorizontalAlignment="Center" Margin="0,27,0,0" VerticalAlignment="Top" FontSize="60"/>
        <Button x:Name="EnterOptions" Content="Options" HorizontalAlignment="Center" Margin="0,430,0,0" VerticalAlignment="Top" Width="250" AutomationProperties.AccessKey="o" Click="EnterOptions_Click" FontSize="40" Height="70" TabIndex="-4"/>
        <Button x:Name="EnterGameOptions" Content="Start Game!" HorizontalAlignment="Center" Margin="0,286,0,0" VerticalAlignment="Top" Width="312" AutomationProperties.AccessKey="s" FontSize="40" Height="100" TabIndex="0" Click="EnterGameOptions_Click" HorizontalContentAlignment="Center"/>
        <Button x:Name="ExitGame" Content="Exit" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="250" AutomationProperties.AccessKey="e" FontSize="40" Height="70" Click="ExitGame_Click"/>

    </Grid>
</Page>
